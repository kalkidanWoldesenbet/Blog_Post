<%- include("partials/header", { title: "New Post" }) %>

<div class="page-head">
  <h1>New Post</h1>
  <a class="button ghost" href="/">Back</a>
</div>

<form class="card form" action="/posts" method="post">
  <label>
    Title
    <input name="title" type="text" maxlength="120" required />
  </label>

  <label>
    Content
    <textarea name="content" rows="10" required></textarea>
  </label>

  <div class="actions">
    <button class="button" type="submit">Publish</button>
    <a class="button secondary" href="/">Cancel</a>
  </div>
</form>

<%- include("partials/footer") %>

